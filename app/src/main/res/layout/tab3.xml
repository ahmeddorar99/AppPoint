<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp">

            <LinearLayout
                android:id="@+id/Profile"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/customborder2"
                android:orientation="horizontal">
                >


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_imag2e"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    app:civ_border_color="#fffefe"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="serif-monospace"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="serif-monospace"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/customborder2"
                android:drawableLeft="@drawable/ic_my_location_white_24dp"
                android:fontFamily="serif-monospace"
                android:text=" GPS Setting"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/customborder2"
                android:drawableLeft="@drawable/ic_notifications_white_24dp"
                android:fontFamily="serif-monospace"
                android:text=" Notification Setting"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/customborder2"
                android:drawableLeft="@drawable/ic_font_download_white_24dp"
                android:fontFamily="serif-monospace"
                android:text=" Change Font"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/customborder2"
                android:drawableLeft="@drawable/ic_format_size_white_24dp"
                android:fontFamily="serif-monospace"
                android:text=" Change Font Size"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/customborder2"
                android:drawableLeft="@drawable/ic_color_lens_white_24dp"
                android:fontFamily="serif-monospace"
                android:text=" Change Theme"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/customborder2"
                android:drawableLeft="@drawable/ic_headset_mic_white_24dp"
                android:fontFamily="serif-monospace"
                android:text=" Support"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/customborder2"
                android:drawableLeft="@drawable/ic_error_outline_white_24dp"
                android:fontFamily="serif-monospace"
                android:text=" About us"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>